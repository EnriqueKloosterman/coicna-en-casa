<!-- categorias -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    
    
        <% categories.forEach(cat => { %>
            
            <a href="/categories/<%- cat.name %>" class="col text-center category-link">
                <div class="category-img shadow">
                    <img src="/images/<%- cat.image %> " alt="imagen de <%- cat.name %> " loading="lazy">
                </div>
                <div class="pt-1"><%- cat.name %></div>
            </a>
        <% }) %>
    

    <a href="/categories" class="col text-center category-link">
        <div class="category-img shadow">
            <img src="/images/view-all.jpg" alt="view all" loading="lazy">
        </div>
        <div class="pt-1">Ver todas</div>
    </a>
</div>
<!-- categorias -->

<!-- Ultimos -->
<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2 class="display-6 fw-bold">Ultimas Recetas</h2>
        <a href="/exploreLatest" class="ms-auto text-decoration-none">Ver más recetas</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 g-2 g-lg-3">

        <% if (food != '') { %>
            <% food.latest.forEach(food => { %>
                <a href="/recipe/<%= food._id %> " class="col text-center category-link ">
                    <div class="category-img category-img-lg shadow">
                        <img src="/images/recipes/<%- food.image %> " alt="<%- food.name %> " loading="lazy">
                    </div>
                    <div class="pt-1"><%- food.name %></div>
                </a>
            <% }) %>
        <% } %>
 
    </div>
</section>
