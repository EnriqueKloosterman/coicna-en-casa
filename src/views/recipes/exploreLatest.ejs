<h2 class="pb-4 ">Ultimas recetas</h2>


<div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 g-2 g-lg-3">

    <% if (recipe != '') { %>
        <% recipe.forEach(element => { %>
            <a href="/recipe/<%= element.id %> " class="col text-center category-link ">
                <div class="category-img category-img-lg shadow">
                    <img src="/images/recipes/<%- element.image %> " alt="<%- element.name %> " loading="lazy">
                </div>
                <div class="pt-1"><%- element.name %></div>
            </a>
        <% }) %>
    <% } %>
</div>